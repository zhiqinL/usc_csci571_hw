<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="csci571.zhiqinliao.hw9.activity.BillDetailActivity"
    tools:showIn="@layout/bill_detail">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        
        <ImageButton
            android:id="@+id/fav_btn"
            android:layout_width="@dimen/detail_img_btn_size"
            android:layout_height="@dimen/detail_img_btn_size"
            android:background="@drawable/ic_fav_img_btn"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BILL ID:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textSize="@dimen/detail_text_size"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bill Type:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sponsor:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_sponsor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chamber:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_chamber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Introduced On:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/introduce_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Congress URL:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/congress_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Version Status:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/version_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/detail_linear_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bill URL:"
                android:textColor="@color/detailTitle"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bill_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:textSize="@dimen/detail_text_size"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>