<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="csci571.zhiqinliao.hw9.activity.LegislatorDetailActivity"
    tools:showIn="@layout/leg_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

                <ImageButton
                    android:id="@+id/fav_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/leg_img_btn_margin_right"
                    android:background="@drawable/fav_icon"/>

                <ImageButton
                    android:id="@+id/facebook_btn"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginRight="@dimen/leg_img_btn_margin_right"
                    android:background="@drawable/f"/>

                <ImageButton
                    android:id="@+id/twitter_btn"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginRight="@dimen/leg_img_btn_margin_right"
                    android:background="@drawable/t"/>

                <ImageButton
                    android:id="@+id/website_btn"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/w"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/leg_img"
                android:layout_width="100dp"
                android:layout_height="120dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/party_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/d"/>

            <TextView
                android:id="@+id/party_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="Republican"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textColor="@color/detailTitle"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/leg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="123easdfa"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

